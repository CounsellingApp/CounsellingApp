<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">

            <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/answers_facultyimage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"

            android:scaleType="centerCrop"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                >
            <TextView
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:id="@+id/answers_facultyname"
                android:padding="5dp"
                android:text="Dr. Amit Neogi"
                android:textSize="16sp"/>
            </RelativeLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_answers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="15sp"
            android:paddingTop="10dp"
            android:visibility="visible"
            android:text="This is the Answer"/>
        <me.jagar.chatvoiceplayerlibrary.VoicePlayerView
            android:id="@+id/answer_audio_player"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:enableVisualizer="true"
            android:layout_gravity="center_horizontal"
            app:visualizationPlayedColor="#ed715d"
            app:visualizationNotPlayedColor="#727171"
            app:playPauseBackgroundColor="#ed715d"
            app:timingBackgroundColor="@color/white"
            app:seekBarProgressColor="#000"
            app:showShareButton="true"
            app:shareCornerRadius="100"
            app:playPauseCornerRadius="100"
            app:showTiming="true"
            android:visibility="gone"
            app:viewCornerRadius="100"
            app:viewBackground="@color/white"
            app:progressTimeColor="#000"
            app:seekBarThumbColor="#FFC107"
            app:shareBackgroundColor="@color/white"
            app:playProgressbarColor="#ed715d"
            app:shareText="SHARE ME"/>
    </LinearLayout>
</LinearLayout>