<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/main_app_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/main_app_background"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/answers_facultyimage"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
                android:scaleType="centerCrop"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answers_facultyname"
                android:text="LODADING..."
                android:fontFamily="@font/work_sans_medium"
                android:textColor="#3b566e"
                android:textSize="15sp"/>
            </RelativeLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_answers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#3b566e"
            android:text="Loading, please wait..."
            android:textSize="14sp"
            android:lineSpacingExtra="5.3sp"
            android:fontFamily="@font/work_sans"
            android:visibility="visible"
            />
        <me.jagar.chatvoiceplayerlibrary.VoicePlayerView
            android:id="@+id/answer_audio_player"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:enableVisualizer="true"
            android:layout_gravity="center_horizontal"
            app:visualizationPlayedColor="#ed715d"
            app:visualizationNotPlayedColor="#727171"
            app:playPauseBackgroundColor="#ed715d"
            app:timingBackgroundColor="@color/white"
            app:seekBarProgressColor="#000"
            app:showShareButton="true"
            app:shareCornerRadius="100"
            app:playPauseCornerRadius="1"
            app:showTiming="true"
            android:visibility="gone"
            app:viewCornerRadius="100"
            app:viewBackground="@color/main_app_background"
            app:progressTimeColor="#000"
            app:seekBarThumbColor="#FFC107"
            app:shareBackgroundColor="@color/white"
            app:playProgressbarColor="#ed715d"
            app:shareText="SHARE ME"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d6e7f2"
        android:layout_marginBottom="5dp"/>
</LinearLayout>