<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mn.crawler.rview.Respond_To_A_Question"
    android:orientation="vertical">
    <include android:layout_height="wrap_content"
            android:layout_width="match_parent"
        layout="@layout/drawer_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_reply_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:autoText="true"
            android:ems="10"
            android:layout_margin="10dp"
            android:fontFamily="@font/open_sans_semibold"
            android:foregroundTint="#3F51B5"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="Question"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txt_reply_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/open_sans"
            android:layout_marginTop="5dp"
            android:text="Author" />
        <TextView
            android:id="@+id/txt_reply_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/open_sans"
            android:gravity="clip_horizontal|clip_vertical"
            android:textColor="#497cfb"
            android:text="Tags" />
        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#000000"
            android:alpha="0.2"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/txt_reply_answer"
            android:layout_weight="1"
            android:hint="Type your respnse here"
            android:textSize="15sp"
            android:textColor="#756f8ba4"
            android:gravity="top|left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_post_answer"
            android:layout_weight="8"
            android:background="#ed715d"
            android:text="Post"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"/>
        <ImageButton
            android:layout_width="0dp"
            android:id="@+id/btn_record_message"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/mic"
            android:background="@color/white"/>

        
    </LinearLayout>

</LinearLayout>