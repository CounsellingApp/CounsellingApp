<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dr. Amit Neogi"
            android:id="@+id/faculty_name"
            android:layout_marginTop="5dp"
            android:textSize="17sp"
            android:textColor="#3b566e"
            android:fontFamily="@font/work_sans_medium"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/faculty_designation"
            android:fontFamily="@font/work_sans"

            android:lines="1"
            android:text="(Head)"
            android:textColor="#3b566e"
            android:textSize="14sp" />





    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:layout_marginTop="10dp">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/faculty_mail"
            android:id="@+id/faculty_emailbutton"
            android:layout_marginRight="30dp"
            android:background="@color/white"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/faculty_phonebutton"
            app:srcCompat="@drawable/faculty_phone"
            android:background="@color/white"/>
    </LinearLayout>
        
    </LinearLayout>
</androidx.cardview.widget.CardView>