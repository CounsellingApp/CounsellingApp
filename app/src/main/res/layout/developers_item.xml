<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="66.7dp"
        android:layout_height="66.7dp"
        android:id="@+id/developer_image"
        android:src="@drawable/amitneogi"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lakshay Bhagtani"
        android:layout_gravity="center_horizontal"
        android:id="@+id/developer_name"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:lines="1"
        app:autoSizeTextType="uniform"
        android:textColor="#3b566e"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Developer | Competitive Programmer"
        android:id="@+id/developer_desc"
        android:textSize="13sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:lines="1"
        app:autoSizeTextType="uniform"
        android:textColor="#ed715d"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/linkedin"
            android:src="@drawable/linkedin"
            android:background="@color/main_app_background"
            android:scaleType="fitXY"
            android:layout_marginRight="15dp"/>
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/developer_mail"
            android:scaleType="fitXY"
            android:src="@drawable/maildev"
            android:background="@color/main_app_background"/>


    </LinearLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#996f8ba4"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

</LinearLayout>