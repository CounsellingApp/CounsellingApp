<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_anonymous"
        android:layout_width="match_parent"
        android:layout_height="50.7dp"

        fancy:fb_defaultColor="#ed715d"
        fancy:fb_focusColor="#0000FF"

        fancy:fb_iconPosition="left"
        fancy:fb_radius="0dp"
        fancy:fb_text="Post Anonymously"
        fancy:fb_textColor="#FFFFFF" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.7dp"/>
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_reveal_identinty"
        android:layout_width="match_parent"
        android:layout_height="50.7dp"

        fancy:fb_defaultColor="#ed715d"
        fancy:fb_focusColor="#0000FF"

        fancy:fb_iconPosition="left"
        fancy:fb_radius="0dp"
        fancy:fb_text="Post Normally"

        fancy:fb_textColor="#FFFFFF" />
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_cancel_asking"
        android:layout_width="match_parent"
        android:layout_height="50.7dp"

        fancy:fb_defaultColor="@color/white"
        fancy:fb_focusColor="#0000FF"

        fancy:fb_iconPosition="left"
        fancy:fb_radius="0dp"
        fancy:fb_text="CANCEL"

        fancy:fb_textColor="#3b566e" />
</LinearLayout>