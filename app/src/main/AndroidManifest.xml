<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lnmiit.college.counsellingapp">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".mn.crawler.rview.Respond_To_A_Question"
            android:parentActivityName=".mn.crawler.rview.MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".mn.crawler.rview.MainActivity"/>

        </activity>
        <activity android:name=".AskQuestion" />
        <activity android:name=".Introduction_Activity">

        </activity>
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".mn.crawler.rview.activity_answer" />
        <activity
            android:name=".mn.crawler.rview.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>