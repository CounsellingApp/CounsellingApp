<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity"
    android:background="@color/colorAccent"
    android:gravity="center">


    <Button
        android:id="@+id/JoinAsUser"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:background="@drawable/button_curve"
        android:text="Join as Student"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/JoinAsUser"
        app:layout_constraintVertical_bias="0.244">

        <Button
            android:id="@+id/JoinAsCounsellor"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_curve"
            android:gravity="center"
            android:text="Join as Counsellor"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/loginlinearlayout"
            android:visibility="gone"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <EditText
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:hint="Enter Usernanme"
                android:textColorHint="@color/colorPrimary"
                android:background="@drawable/button_curve">

            </EditText>
            <EditText
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:hint="Enter Usernanme"
                android:textColorHint="@color/colorPrimary"
                android:background="@drawable/button_curve">

            </EditText>
            <Button
                android:id="@+id/login"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_curve"
                android:gravity="center"
                android:text="login"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>